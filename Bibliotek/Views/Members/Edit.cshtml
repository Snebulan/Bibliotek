@model Bibliotek.Models.Member

@{
    ViewData["Title"] = "Edit";
}

<div class="table-title">
    <div class="row">
        <h2 class="table-title-h2">Redigera Medlem</h2>
    </div>
</div>
<br />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            @if ((string)TempData["Fail"] == "Fail")
            {
                <div class="alert alert-danger" role="alert">
                    <p><strong>Nu blev det fel!</strong> Personnumret går ej att ändra!</p>
                </div>
            }
            @Html.HiddenFor(m => m.PersonNumber)
            <div class="form-group">
                <label asp-for="PersonNumber" class="control-label"></label>
                <input value="@Model.PersonNumber" class="form-control" disabled="disabled" />
                <span asp-validation-for="PersonNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a asp-action="Index" class="btn btn-primary"><i class="glyphicon glyphicon-chevron-left"></i> Tillbaka</a>
                <button type="submit" value="Spara" class="btn btn-success"><i class="glyphicon glyphicon-saved"></i> Spara</button>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
