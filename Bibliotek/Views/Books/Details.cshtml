@model Bibliotek.Models.Book

@{
    ViewData["Title"] = "Details";
}

<div class="table-title">
    <div class="row">
        <h2 style="margin: 15px;">Detaljer för Bok</h2>
    </div>
</div>
<br />
<table class="table">
    <tbody>
        <tr>
            <td>
                <strong>
                    @Html.DisplayNameFor(model => model.ISBN):
                    <br />
                    @Html.DisplayNameFor(model => model.AuthorID):
                    <br />
                    @Html.DisplayNameFor(model => model.Title):
                    <br />
                    @Html.DisplayNameFor(model => model.Description): 
                </strong>
            </td>
            <td>
                @Html.DisplayFor(model => model.ISBN)
                <br>
                @Html.DisplayFor(model => model.Author.FullName)
                <br>
                @Html.DisplayFor(model => model.Title)
                <br>
                @Html.DisplayFor(model => model.Description)
            </td>
        </tr>
    </tbody>
</table>
<br />
<div class="form-group">
    <a asp-action="Index" class="btn btn-primary"><i class="glyphicon glyphicon-chevron-left"></i> Tillbaka</a>
    <a asp-action="Edit" asp-route-id="@Model.ID" class="btn btn-warning"><i class="glyphicon glyphicon-edit"></i> Redigera</a>
</div>

