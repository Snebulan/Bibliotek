@model Bibliotek.Models.Book

@{
    ViewData["Title"] = "Delete";
}

<div class="table-title">
    <div class="row">
        <h2 style="margin: 15px;">Radera Bok</h2>
        <h4 style="margin: 15px;">Är du säker på att du vill radera denna bok?</h4>
    </div>
    <div class="alert alert-danger" role="alert">
        <p><strong>OBS!</strong> Om du raderar boken kommer även alla lån som är kopplade till denna bok att raderas!</p>
    </div>
</div>
<br />
<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ISBN)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ISBN)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.AuthorID)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Author.FullName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <a asp-action="Index" class="btn btn-primary"><i class="glyphicon glyphicon-chevron-left"></i> Tillbaka</a>
        <button type="submit" value="Delete" class="btn btn-danger"><i class="glyphicon glyphicon-trash"></i> Radera</button>
    </form>
</div>
