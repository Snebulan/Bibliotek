@model Bibliotek.Models.ViewModels.AuthorDetailsVM

@{
    ViewData["Title"] = "Details";
}

<div class="table-title">
    <div class="row">
        <h2 class="table-title-h2">Detaljer för Författare</h2>
    </div>
</div>
<br />
<div>
    <p><h4><strong>Författare:</strong> @Html.DisplayFor(model => model.Author.FullName)</h4></p>
    <br />
    <table class="table table-striped">
        <thead class="table-head">
            <tr>
                <th>
                    <p>Böcker</p>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model.Books)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => book.Title)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div>
    <a asp-action="Index" class="btn btn-primary"><i class="glyphicon glyphicon-chevron-left"></i> Tillbaka</a>
    <a asp-action="Edit" asp-route-id="@Model.Author.ID" class="btn btn-warning"><i class="glyphicon glyphicon-edit"></i> Redigera</a>
</div>
