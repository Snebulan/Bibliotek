@model Bibliotek.Models.ViewModels.LoanIndexVM

@{
    ViewData["Title"] = "Index";
}

<h2>Lån</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Registrera Lån</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Member.FirstOrDefault().ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Loans.FirstOrDefault().MemberID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Book.FirstOrDefault().Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Loans.FirstOrDefault().DateLoan)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Loans.FirstOrDefault().DateReturn)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Loans)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Member.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Member.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Book.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateLoan)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateReturn)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
